    private void btnExitActionPerformed(java.awt.event.ActionEvent evt) {                                        
        this.dispose();
    }                                       

    private void btnMoltiplicaActionPerformed(java.awt.event.ActionEvent evt) {                                              
        String numero= txtInserire.getText();
        int num;
        num=(Integer.parseInt(numero))*2;
        txtRisultato.setText(String.valueOf(num));
    }                                             

    private void btnRestartActionPerformed(java.awt.event.ActionEvent evt) {                                           
        txtInserire.setText(null);
        txtRisultato.setText(null);
    }                                          
    //txtInserire.setText(String.valueOf(Integer.parseInt(txtRisultato.getText())*2));
